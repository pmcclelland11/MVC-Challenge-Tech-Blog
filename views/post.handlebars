{{!-- Individual post view --}}
{{#extend "layouts/main"}}
{{#content "body"}}
    <article class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <p>Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
    </article>

    {{#if loggedIn}}
        <form action="/post/{{post.id}}/comment" method="POST">
            <textarea name="commentText" placeholder="Leave a comment"></textarea>
            <button type="submit" class="btn">Submit</button>
        </form>
    {{/if}}

    <section class="comments">
        <h3>Comments</h3>
        {{#each post.comments}}
            <div class="comment">
                <p>{{this.text}}</p>
                <p>Comment by {{this.user.username}} on {{formatDate this.createdAt}}</p>
            </div>
        {{/each}}
    </section>
{{/content}}
